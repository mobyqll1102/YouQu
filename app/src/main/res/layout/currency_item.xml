<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin">

    <ImageView
        android:id="@+id/item_flag_img"
        android:layout_width="@dimen/flag_width"
        android:layout_height="@dimen/flag_height"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_currency_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_flag_img"
        android:layout_marginLeft="@dimen/margin"
        android:layout_toRightOf="@id/item_flag_img"
        android:textSize="@dimen/text_sixteent"/>

    <TextView
        android:id="@+id/item_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_flag_img"
        android:layout_marginLeft="@dimen/margin"
        android:layout_toRightOf="@id/item_flag_img"
        android:textSize="@dimen/text_twelve"/>
</RelativeLayout>