<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin"
                                    android:orientation="vertical"
                                    app:cardElevation="@dimen/two_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/zhihudetails_img"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:transitionName="@string/transition"/>

        <TextView
            android:id="@+id/zhihudetails_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/zhihudetails_img"
            android:layout_toRightOf="@id/zhihudetails_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/text_sixteent"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>